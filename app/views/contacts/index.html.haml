- provide(:title, 'Contacts')
= render 'contact_header'

.col-md-10
  .panel.panel-default
    .panel-heading
      Contacts
    .panel-body
      %ul.panel-right
        %li= link_to 'CSV', contacts_path(format: 'csv')
        %li= link_to 'PDF', contacts_path(format: 'pdf')

    %table.table.table-hover
      %thead
        %tr
          %th{scope: "col"} Contact Name
          %th{scope: "col"} Company
          %th{scope: "col"} Email
          %th{scope: "col"} Office Phone
          %th{scope: "col"} Mobile Phone
          %th{scope: "col"} Actions
      %tbody
        = render @contacts
