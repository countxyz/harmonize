.col-md-4
  .panel.panel-default
    .panel-heading
      Phone Book
      %span.panel-right
        = link_to 'Edit', '#', id: 'phone-book-panel'

    %table.table.table-hover
      %tbody
        %tr
          %th Office Phone
          %td= phone_format(@phone.office)
        %tr
          %th Mobile Phone
          %td= phone_format(@phone.mobile)
        %tr
          %th Fax Phone
          %td= phone_format(@phone.fax)
        %tr
          %th Home Phone
          %td= phone_format(@phone.home)
