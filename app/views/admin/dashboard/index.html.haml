= render 'dashboard_header'

.row
  %h2 Accounts

.row
  .col-md-3.stats
    %ul.list-group
      %li.list-group-item.text-muted Accounts

      %li.list-group-item.text-right
        %span.pull-left
          Accounts
        = @accounts.count

      %li.list-group-item.text-right
        %span.pull-left
          Active
        #{@accounts.inactive_total} / #{@accounts.active_total} 

  .col-md-5.col-md-push-2
    = pie_chart [['Active', @accounts.active_total],
      ['Inactive', @accounts.inactive_total]],
      library: { tooltip: { pointFormat: '{point.percentage:.1f}%' } }

.row
  .col-md-7.col-md-push-2.stats
    = bar_chart @users.only_admins.map{ |u| [u.handle, u.accounts.count] },
      library: { tooltip: { pointFormat: 'Total: {point.y}' } }
