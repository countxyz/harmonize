.panel.panel-default.panel-borderless
  .panel-heading
    Billing Address
    = link_to 'edit', '#', class: 'edit-panel', id: 'ba-panel'

  = render 'billing_address_table'

%section{ style: 'display:none;', id: 'edit-ba-form' }
  = simple_form_for @account do |f|
    = f.simple_fields_for :billing_address do |builder|
      = render 'shared/address_form', builder: builder
    %p.text-right
      %button.btn.btn-default#close-ba Close
      = f.button :submit, 'Update Billing Address', class: 'btn-default'
