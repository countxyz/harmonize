%section#edit-sa-form{ style: 'display:none;' }
  = simple_form_for klass do |f|
    = f.simple_fields_for :shipping_address do |builder|
      = render 'shared/address/address_form', builder: builder
    
    %span.pull-right
      = link_to 'Cancel', '#', class: 'btn btn-default', id: 'close-sa'
      = f.button :submit, 'Update Shipping Address'
