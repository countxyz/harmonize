%section#edit-pb-form{ style: 'display:none;' }
  = simple_form_for klass do |f|
    = f.simple_fields_for :phone do |builder|
      = render 'shared/phone/phone_form', builder: builder

    %p.text-right
      = link_to 'Cancel', '#', class: 'btn btn-default', id: 'close-pb'
      = f.button :submit, 'Update Phone Book', class: 'btn-default'
