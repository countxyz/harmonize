<% provide(:title, @project.name) %>

<% content_for :page_header do %>
<h1>Details <small class="header_right">Projects</small></h1>
<% end %>

<h2><%= @project.name %></h2>

<table>
  <tr>
    <th>Role</th>
    <td><%= @project.role %></td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @project.status %></td>
  </tr>
  <tr>
    <th>Priority</th>
    <td><%= @project.priority %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= @project.profile_date_format(@project.start_date) %></td>
  </tr>
  <tr>
    <th>Target Date</th>
    <td><%= @project.profile_date_format(@project.target_date) %></td>
  </tr>
  <tr>
    <th>Deadline</th>
    <td><%= @project.profile_date_format(@project.deadline) %></td>
  </tr>
  <tr>
    <th>Completion Date</th>
    <td><%= @project.profile_date_format(@project.completion_date) %></td>
  </tr>
  <tr>
    <th>Notes</th>   
    <td><%= @project.notes %>
  </tr>
</table>

<%= link_to 'Edit Project', edit_project_path(@project) %>

<%= link_to 'Delete Project', @project, :method => :delete,
	data: { confirm: 'Are you sure you want to delete this project?' } %>

<%= link_to "Back to Projects", projects_path %>
