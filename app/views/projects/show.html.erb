<% provide(:title, @project.name) %>

<% content_for :page_header do %>
<h1>Details <small class="header_right">Projects</small></h1>
<% end %>

<h2><%= @project.name %></h2>

<p>Role:            <%= @project.role %>            </p>
<p>Status: 					<%= @project.status %>					</p>
<p>Priority: 				<%= @project.priority %>				</p>
<p>Start Date: 			<%= @project.start_date %>			</p>
<p>Target Date: 		<%= @project.target_date %>			</p>
<p>Deadline: 				<%= @project.deadline %>				</p>
<p>Completion Date: <%= @project.completion_date %>	</p>
<p>Notes: 					<%= @project.notes %>						</p>

<%= link_to 'Edit Project', edit_project_path(@project) %>

<%= link_to 'Delete Project', @project, :method => :delete,
	data: { confirm: 'Are you sure you want to delete this project?' } %>

<%= link_to "Back to Projects", projects_path %>
