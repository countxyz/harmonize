= content_tag_for(:tr, project, 'data-id' => project.id) do
  %th.bold_name{scope: 'row'}= link_to project.name, project

  %td= data_format(project.website)
  %td= data_format(project.employer)

  %td.table_actions
    = link_to 'Show', project
    %br/
    = link_to 'Edit', edit_project_path(project)
    %br/
    = link_to 'Delete', project, method: :delete, remote: true,
      data: { confirm: 'Are you sure?' }, class: 'delete_row'
