<%= form_for(@project) do |f| %>
<%= f.error_messages %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <fieldset>
    <legend>Status</legend>    
    <%= radio_button_tag(:status, "Not Started") %>
    <%= label_tag(:status, "Not Started") %><br />
    <%= radio_button_tag(:status, "In Progress") %>
    <%= label_tag(:status, "In Progress") %><br />
    <%= radio_button_tag(:status, "Completed") %>
    <%= label_tag(:status, "Completed") %>
  </fieldset>   

  <p>
    <%= f.label :priority %>
    <%= f.text_field :priority %>
  </p>

  <p>
    <%= f.label :start_date %>
    <%= f.date_select :start_date, :order => [:month, :day, :year] %>
  </p>

  <p>
    <%= f.label :target_date %>
    <%= f.date_select :target_date, :order => [:month, :day, :year] %>
  </p>

  <p>
    <%= f.label :deadline %>
    <%= f.date_select :deadline, :order => [:month, :day, :year] %>
  </p>

  <p>
    <%= f.label :completion_date %>
    <%= f.date_select :completion_date, :order => [:month, :day, :year] %>
  </p>

  
  <p>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </p>

<%= f.submit %>
<% end %>
