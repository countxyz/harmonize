<%= simple_form_for @project do |f| %>

<form id="new_project">
  <fieldset id="project_forms">
  <legend class="bold_title">Project Details</legend>

    <ul class="flex_list">
      <li class="flex_item">
        <%= f.input :name %>
      </li>
      <li class="flex_radio">
        <%= f.input :status, as: :radio_buttons, 
                    collection: Project::STATUS_OPTIONS %>
      </li>
    </ul>

    <ul class="flex_list">
      <li class="flex_item">
        <%= f.input :role %>
      </li>
      <li class="flex_radio">
        <%= f.input :priority, as: :radio_buttons,
                    collection: Project::PRIORITY_OPTIONS %>
      </li>
    </ul>
    <span class="project_text"><%= f.input :notes, as: :text %></span>

  </fieldset>

  <fieldset id="project_forms">
  <legend class="bold_title" align="right">Project Dates</legend>
    <details class="form_info">
      Dates must have Month, Day, and Year to be saved
    </details>
    <ul>
      <li>
        <%= f.input :start_date, as: :datepicker %>
      </li>
      <li>
        <%= f.input :target_date, as: :datepicker %>
      </li>
      <li>
        <%= f.input :deadline, as: :datepicker %>
      </li>
      <li>
        <%= f.input :completion_date, as: :datepicker %>
      </li>
    </ul>
    <%= f.button :submit %>
  </fieldset>
<% end %>
