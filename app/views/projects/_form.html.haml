= simple_form_for @project, html: { multipart: true } do |f|
  %form
    %fieldset
      %legend.bold_title Project
      = f.input :name,     input_html: { id: 'regular_field', maxlength: 50  }
      = f.input :website,  input_html: { id: 'regular_field', maxlength: 100 }
      = f.input :employer, input_html: { id: 'regular_field', maxlength: 50  }
      = f.input :image, as: :file, input_html: { id: 'file', multiple: true }
      = f.label :notes
      = f.input_field :notes, as: :text, input_html: { rows: 4, maxlength: 1000 }
      %section.button_center
        %p
          = f.button :submit, class: 'btn btn-form btn-6 btn-6j'
