- provide(:title, 'Projects Index')
- content_for :page_header do
  %h1
    Index
    %span.header_right
      Projects

%nav.site_links
  %ul
    %li
      = link_to root_path do
        %i.fa.fa-home.fa-2x
    %li
      = link_to "New Project", new_project_path,
        class: "button button-pill button-flat-primary"
%table
  %thead
    %tr
      %th{scope: "col"} Project Name
      %th{scope: "col"} Role
      %th{scope: "col"} Status
      %th{scope: "col"} Priority
      %th{scope: "col"} Start Date
      %th{scope: "col"} Deadline
      %th{scope: "col"} Completion Date
      %th{scope: "col"} Actions
  %tbody
    - @projects.each do |project|
      %tr
        %th.bold_name{scope: "row"}= link_to project.name, project
        %td= project.role
        %td= project.status
        %td= project.priority
        %td= table_date_format(project.start_date)
        %td= table_date_format(project.deadline)
        %td= table_date_format(project.completion_date)
        %td.table_actions
          = link_to 'Show', project
          %br/
          = link_to 'Edit', edit_project_path(project)
          %br/
          = link_to 'Delete', project, method: :delete,
            data: { :confirm => 'Are you sure?' }
