- provide(:title, 'Tasks')
= render 'task_header'

.row#completed_tasks
  %h2 Completed Tasks

.row
  %ul.list-group-item.list-group-item-success
    - @tasks.each do |task|
      %li.list-group-item.list-group-item-success
        %i.fa.fa-check
        %ul
          %li#task-description= task.description
          %li#completed-datetime= datetime_format(task.completed)
