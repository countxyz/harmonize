%section{style: 'display:none;', id: 'new_task_form' }
  = simple_form_for(task) do |f|
    %fieldset
      %legend.bold_title New Task
      = f.input :description, input_html: { id: 'regfield' }
      = f.input :deadline, as: :datetimepicker, input_html: { id: 'datetimepicker1' }, label: 'Due Date'
    = render partial: 'shared/submit_center', locals: { f: f }
