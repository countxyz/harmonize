= simple_form_for @task, remote: true do |f|
  .row
    .col-md-6.col-md-offset-1
      = f.input :description, as: :text
  .row
    .col-md-4.col-md-offset-1
      = f.input :deadline, as: :datetimepicker
    .col-md-4#task-form-buttons
      %button.btn.btn-default.cancel Cancel
      = f.button :submit, 'Submit', id: 'task-submit'

= javascript_include_tag 'datetimepicker'
