= simple_form_for @task, remote: true do |f|
  %ul.errors
  .row
    .col-md-6.col-md-offset-1= f.input :description, as: :text

  .row
    .col-md-4.col-md-offset-1= f.input :deadline, as: :datetimepicker

    .col-md-4#task-form-buttons
      = hidden_field_tag 'task[user_id]', current_user.id
      = link_to 'Cancel', '#',      class: 'btn btn-default cancel'
      = f.button :submit, 'Submit', class: 'btn-default', id: 'task-submit'
