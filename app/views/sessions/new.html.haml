- provide(:title, 'Sign In')
= render 'session_header'

= simple_form_for(:signin, method: 'POST') do |f|
  %fieldset
    %legend.bold_title Sign In
    = f.input :handle, label: 'User Name', input_html: { class: 'text_input',
      id: 'regular_field' }
    = f.input :password, input_html: { class: 'text_input',
      id: 'regular_field'}
    %section.button_center
      %p= f.button :submit, 'Sign In'
